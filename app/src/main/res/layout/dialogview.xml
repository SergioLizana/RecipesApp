<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_linears_background_blue">


    <TextView
        android:id="@+id/title_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/background_white_ingredient"
        android:textSize="@dimen/text_size_title_ingredients"
        android:layout_marginTop="@dimen/margin_top_ingredients"
        android:text="Ingredients" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_list_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_linears"
        android:layout_marginTop="@dimen/margin_top_ingredients"
        tools:context="riviasoftware.recipesapp.ui.RecipeStepsListActivity"
        tools:listitem="@layout/ingredients_alert_list"
        android:layout_below="@+id/title_ingredient"
        android:layout_alignParentStart="true" />


</RelativeLayout>